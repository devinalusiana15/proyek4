<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <ImageView
        android:id="@+id/img_logo_metagama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_metagama"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp">
    </ImageView>

    <TextView
        android:id="@+id/txt_slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Build Spiritual and Social Characters"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="50dp"
        android:textColor="@color/purple_01"
        android:fontFamily="@font/poppins_bold">
    </TextView>

    <Button
        android:id="@+id/buttonMasuk"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_height="60dp"
        android:layout_width="250dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="200dp"
        android:text="MASUK"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="15sp"
        app:cornerRadius="25dp">
    </Button>

    <Button
        android:id="@+id/buttonDaftar"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_height="60dp"
        android:layout_width="250dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="320dp"
        android:text="DAFTAR"
        android:textColor="@color/purple_01"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="15sp"
        app:strokeWidth="1dp"
        app:cornerRadius="25dp"
        app:strokeColor="@color/purple_02">
    </Button>
</androidx.constraintlayout.widget.ConstraintLayout>