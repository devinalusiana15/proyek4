<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MasukActivity">

    <ImageView
        android:id="@+id/ic_backMasuk_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_arrow_back"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        tools:ignore="MissingConstraints">
    </ImageView>

    <TextView
        android:id="@+id/titleMasuk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Pemulihan Akun"
        android:textColor="@color/purple_01"
        android:fontFamily="@font/poppins_bold"
        android:textSize="25sp"
        android:layout_marginTop="50dp">
    </TextView>

    <TextView
        android:id="@+id/subtitleMasuk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:text="@string/subtitle_recover"
        android:textColor="@color/purple_01"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="15sp">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/tileEmailRecover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="5dp"
            android:text="Email"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/purple_02"
            android:textSize="15sp">
        </TextView>
        <EditText
            android:id="@+id/inputEmailRecover"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:paddingLeft="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="5dp"
            android:hint="Masukkan Email"
            android:inputType="number"
            android:background="@drawable/stroke_line"
            android:textSize="15sp"
            android:fontFamily="@font/poppins_semibold">
        </EditText>
    </LinearLayout>

    <Button
        android:id="@+id/buttonFormMasuk"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_height="60dp"
        android:layout_width="300dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="300dp"
        android:text="Minta Kode"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="15sp"
        app:cornerRadius="25dp">
    </Button>

    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"
        android:visibility="gone">
    </ProgressBar>
</androidx.constraintlayout.widget.ConstraintLayout>