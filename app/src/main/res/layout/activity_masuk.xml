<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MasukActivity">

    <ImageView
        android:id="@+id/ic_backMasuk_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/ic_arrow_back"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        tools:ignore="MissingConstraints">
    </ImageView>

    <TextView
        android:id="@+id/titleMasuk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Anda Kembali!"
        android:textColor="@color/purple_01"
        android:fontFamily="@font/poppins_bold"
        android:textSize="25sp"
        android:layout_marginTop="50dp">
    </TextView>

    <TextView
        android:id="@+id/subtitleMasuk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="100dp"
        android:text="Masuk Ke Akun"
        android:textColor="@color/purple_01"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="18sp">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_margin="5dp"
                android:text="Username"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/purple_02"
                android:textSize="15sp">
            </TextView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/inputUsername"
                android:hint="Masukkan Username"
                android:paddingLeft="10dp"
                android:inputType="number"
                android:maxLength="9"
                android:background="@drawable/stroke_line"
                android:textSize="15sp"
                android:fontFamily="@font/poppins_semibold">
            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#DC2626"
                android:id="@+id/textViewNimHandle"
                android:layout_marginTop="3dp"
                android:paddingLeft="5dp"
                android:fontFamily="@font/poppins_semibold">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titlePassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_margin="5dp"
                android:text="Password"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/purple_02"
                android:textSize="15sp">
            </TextView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/inputPassword"
                android:hint="Masukkan Password"
                android:paddingLeft="10dp"
                android:inputType="textPassword"
                android:background="@drawable/stroke_line"
                android:textSize="15sp"
                android:fontFamily="@font/poppins_semibold">
            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#DC2626"
                android:id="@+id/textViewPassHandle"
                android:layout_marginTop="3dp"
                android:paddingLeft="5dp"
                android:fontFamily="@font/poppins_semibold">
            </TextView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintHeight_percent="0.60"
        app:layout_constraintWidth_percent="0.85"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:id="@+id/textViewLupaPassword"
            android:text="Lupa kata sandi"
            android:clickable="true"
            android:textColor="@color/purple_02"
            android:fontFamily="@font/poppins_semibold"/>
    </LinearLayout>

    <Button
        android:id="@+id/buttonFormMasuk"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_height="60dp"
        android:layout_width="300dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="180dp"
        android:text="MASUK"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="15sp"
        app:cornerRadius="25dp">
    </Button>

    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"
        android:visibility="gone">
    </ProgressBar>
</androidx.constraintlayout.widget.ConstraintLayout>