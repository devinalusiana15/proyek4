<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/success_bg"
    tools:context=".activities.SuccessActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:layout_marginTop="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/rectangle_pop"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rectangle_pop"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_congrats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SELAMAT!"
        android:textColor="@color/purple_02"
        android:textSize="30sp"
        android:fontFamily="@font/poppins_bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="125dp">
    </TextView>

    <TextView
        android:id="@+id/txt_sudahDaftar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_below="@id/txt_congrats"
        android:text="Anda sudah terdaftar."
        android:textColor="@color/purple_02"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp">
    </TextView>

    <RelativeLayout
        android:id="@+id/checklist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:layout_below="@id/txt_sudahDaftar"
        android:layout_marginTop="280dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/check_pop"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_check"/>
    </RelativeLayout>

    <Button
        android:id="@+id/buttonNextMasuk"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_height="60dp"
        android:layout_width="250dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="280dp"
        android:text="Lanjutkan Masuk"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="15sp"
        app:cornerRadius="25dp">
    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>